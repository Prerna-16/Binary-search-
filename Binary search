

#include<stdio.h>

void main ()

{

int i,n,a[100],num,mid,high,low,found=0;

printf(“enter array size\n”);

scanf(“%d”,&n);

printf(“enter the sorted elements\n”);

for(i=0;i<n;i++)

{

    scanf(“%d”,&a[i]);

}

printf(“element you want to find\n”);

scanf(“%d”,&num);

low=0;

high=n-1;

mid=low+high /2;

for(i=0;i<n;i++)

{

    if (num=a[mid])

    {

        found =1;

        printf(“present at %d position”,mid+1);

        break;



    }

    if(num<a[mid])

    {

        high=mid+1;



    }

    If (num>a[mid])



    {

        low=mid+1;



    }

    mid= low +high /2 ;

    

}



}

